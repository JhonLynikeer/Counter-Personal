<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.toreskotech.pontinho">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_pontinho"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_pontinho"
        android:supportsRtl="true"
        android:theme="@style/Theme.Contador">
        <activity
            android:name="com.toreskotech.pontinho.GameOver"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.toreskotech.pontinho.Game"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.toreskotech.pontinho.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait" >
            //portrait
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>